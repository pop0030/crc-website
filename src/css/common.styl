@import "./variable.styl"

#app {
    min-height: 100vh;
    width: 100%;
}

.sub-header {
    background-color: _green;
    color: _white;
    padding: 1.6rem;
    h2 {
        font-size: 1.6rem;
        font-weight: 200;
        letter-spacing: 0.2rem;
        margin: 0;
    }
}

.sub-body {
    min-height: 100vh;
    .container {
        padding-top: 2rem;
        padding-bottom: 2rem;
    }
}

a,a.r-link {
    text-decoration: none;
    color: _black;
    &:hover,&:focus {
        text-decoration: none;
        color: _green+30;
    }
}

a.m-btn,
.m-btn {
    color: _white;
    background-color: _black;
    padding: 0.6rem 1rem;
    font-size: 0.9rem;
    font-weight: 200;
    display: inline-block;
    &:hover {
        color: _white;
        background: _black+50;
    }
}

h3.stage-title {
    font-size: 1.6rem;
    margin: 2rem 0;
    line-height: 1.5;
    display: flex;
    &:before {
        content: '';
        width: 5px;
        background-color: _green-dark;
        vertical-align: top;
        margin-right: 1rem;
        flex-shrink: 0;
    }
}

h4.stage-title {
    font-size: 1.4rem;
    margin: 0 0 1.4rem 0;
    line-height: 1.8;
    display: flex;
    &:before {
        content: '';
        width: 5px;
        background-color: _green-dark;
        vertical-align: top;
        margin-right: 1rem;
        flex-shrink: 0;
    }
}

h5.stage-title {
    font-size: 1.25rem;
    margin: 0 0 1.25rem 0;
    padding-left: 1.25rem;
    line-height: 1.6;
    display: block;
    position: relative;
    font-weight: 600;
    &:before {
        content: '';
        width: 5px;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        height: 1.8em;
        background-color: _green-dark;
        vertical-align: top;
        margin-right: 1rem;
    }
}

.stage-cover {
    img {
        width: 100%;
    }
}

.stage-content {
    font-size: 1rem;
    line-height: 1.8;
}

.stage-side {
    border: 5px solid _green;
    padding: 1rem;

    .ss-item {
        cursor: pointer;
    }
}

.character-circle {
    text-align: center;
    .cover {
        background-color: _green;
        background-size: cover;
        background-position: center;
        width: 70%;
        height: 0;
        padding: 35% 0;
        border-radius: 100%;
        margin: 1rem auto;
        box-shadow: 0 0 15px -3px alpha(_black, 0.2);
    }
    .name {
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0;
        line-height: 1.4;
    }
    .title {
        font-size: 1rem;
        font-weight: 300;
    }
}

.ytVideo {
    position: relative;
    height: 0;
    width: 100%;
    padding-bottom: (900/16)% 
    iframe {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
    }
}

.album {
    .sm-photo[data-toggle="modal"] {
        height: 100%;
        cursor: pointer;
        img {
            width: 100%;
            height: 100%;
        }
    }
}